{
  "name": "docker_web_app",
  "version": "1.0.0",
  "description": "Node.js on Docker",
  "author": "Douglas dos Santos <douglasdossantos22@gmail.com>",
  "main": "./app/index.ts",
  "scripts": {
    "start-old": "npm run prisma-db && npx ts-node --project app/tsconfig.json && nodemon ./app/index.ts ",
    "start": "npm run prisma-db && npm run prisma-seed && npm run dev ",
    "prisma-db": "npx prisma db push && npx prisma generate ",
    "prisma-seed": "npx prisma db seed --preview-feature ",
    "dev": "npx ts-node-dev --respawn --transpile-only --project app/tsconfig.json app/index.ts "
  },
  "nodemonConfig": {
    "delay": "3"
  },
  "prisma": {
    "schema": "./app/prisma/schema.prisma"
  },
  "devDependencies": {
    "@prisma/client": "^2.22.0",
    "@types/express": "^4.11.1",
    "@types/node": "^12.12.2",
    "nodemon": "^2.0.7",
    "ts-lint": "^4.5.1",
    "ts-node-dev": "^1.1.6",
    "tslint": "^5.12.1",
    "typescript": "^3.4.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "prisma": "^2.22.0"
  }
}
